
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug math-lexer with LLVM",
            "cargo": {
                "args": [
                    "build",
                    "--bin=math-lexer"
                ],
                "filter": {
                    "name": "math-lexer",
                    "kind": "bin"
                }
            },
            "args": ["(test)"]
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Debug math-lexer with GDB",
            "target": "./target/debug/math-lexer",
            "cwd": "${workspaceRoot}",
            "gdbpath": "rust-gdb"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/math-lexer.exe",
            "args": ["(test)"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        }
    ]
}
